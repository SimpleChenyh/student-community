<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.manage.mapper.ActivityMapper">
    <resultMap type="com.manage.entity.Activity" id="Activity">
        <id property="activityid" column="activity_id"/>
        <result property="activityLoc" column="activity_loc"/>
    </resultMap>
    <select id="getAllActivity"  resultMap="Activity">
        select activity_id,activity_loc from activity
    </select>
    <select id="getAllcount" resultType="Integer">
        select count(activity_id) from activity
    </select>
</mapper>